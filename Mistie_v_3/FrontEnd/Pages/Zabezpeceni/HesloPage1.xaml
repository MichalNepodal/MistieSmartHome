            <ColumnDefinition Width="90*"/>
            <ColumnDefinition Width="90*"/>
            <ColumnDefinition Width="90*"/>
            <ColumnDefinition Width="51*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="3" Margin="20,80,20,0">
            <TextBlock x:Name="displayTextBlock" TextWrapping="Wrap" Text="* * * *" Height="92" FontSize="100" FontWeight="Bold" TextAlignment="Center" VerticalAlignment="Center" Padding="0" FontFamily="Franklin Gothic Heavy" Foreground="White" >
                <TextBlock.Background>
                    <SolidColorBrush Color="White" Opacity="0.5"/>
                </TextBlock.Background>
            </TextBlock>


        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="1">
            <Button x:Name="cislo1Button" Content="1" Height="97" Margin="20,30,20,0" Click="cislo1Button_Click" FontSize="95" Foreground="White" BorderBrush="{x:Null}" BorderThickness="2" FontFamily="Tw Cen MT Condensed Extra Bold">
